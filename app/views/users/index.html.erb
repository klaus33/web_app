<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 52 %>
      <%= user.email %>
      <%= link_to "delete user", user, :method => :destroy, :confirm => "You sure?" %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
